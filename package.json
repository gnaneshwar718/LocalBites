{
  "name": "localbites",
  "version": "1.0.0",
  "description": "LocalBites is a traveler-focused web application for discovering authentic local food spots.",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "prepare": "husky install",
    "lint": "eslint src/js/**/*.js",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test:watch": "jest --watch",
    "test:auto": "chokidar \"src/js/**/*.js\" -c \"npm test\""
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "devDependencies": {
    "@commitlint/cli": "^20.2.0",
    "@commitlint/config-conventional": "^20.2.0",
    "@eslint/js": "^9.39.2",
    "chokidar-cli": "^3.0.0",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "globals": "^16.5.0",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.4",
    "stylelint": "^16.26.1",
    "stylelint-config-standard": "^39.0.1"
  },
  "lint-staged": {
    "src/js/**/*.js": [
      "eslint"
    ],
    "src/css/**/*.css": [
      "stylelint"
    ],
    "**/*.{js,css,html,json,md}": [
      "prettier --write"
    ]
  }
}
