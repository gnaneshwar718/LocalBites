{
  "name": "localbites",
  "version": "1.0.0",
  "description": "LocalBites is a traveler-focused web application for discovering authentic local food spots.",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "start": "node server.js",
    "format:check": "prettier --check .",
    "test:auto": "chokidar \"src/js/**/*.js\" -c \"npm test\"",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "lint:css": "stylelint \"**/*.css\"",
    "lint:css:fix": "stylelint \"**/*.css\" --fix",
    "lint:all": "npm run lint && npm run lint:css",
    "format": "npm run lint:fix && npm run lint:css:fix",
    "prepare": "husky",
    "test:ui": "playwright test",
    "test:ui:headed": "playwright test --headed",
    "test:ui:debug": "playwright test --debug",
    "test": "node --experimental-vm-modules -r dotenv/config node_modules/jest/bin/jest.js --passWithNoTests",
    "test:watch": "node watch-tests.mjs",
    "test:coverage": "node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage",
    "validate": "npm run lint:all && npm test",
    "dev": "node watch-tests.mjs",
    "postinstall": "echo '\n Setup complete!\n\n To enable auto-testing on file save, run:\n   npm run dev\n\nThis will automatically run tests whenever you save a file in ANY editor.\n'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gnaneshwar718/LocalBites.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/gnaneshwar718/LocalBites/issues"
  },
  "homepage": "https://github.com/gnaneshwar718/LocalBites#readme",
  "devDependencies": {
    "@babel/core": "^7.28.5",
    "@babel/preset-env": "^7.28.5",
    "@commitlint/cli": "^20.2.0",
    "@commitlint/config-conventional": "^20.2.0",
    "@eslint/js": "^9.39.2",
    "@playwright/test": "^1.57.0",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/user-event": "^14.6.1",
    "babel-jest": "^30.2.0",
    "chokidar-cli": "^3.0.0",
    "dotenv": "^17.2.3",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "globals": "^16.5.0",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "jsdom": "^26.1.0",
    "lint-staged": "^16.2.7",
    "nodemon": "^3.1.11",
    "playwright-core": "^1.57.0",
    "prettier": "^3.7.4",
    "stylelint": "^16.26.1",
    "stylelint-config-standard": "^39.0.1"
  },
  "lint-staged": {
    "src/js/**/*.{js,mjs}": [
      "eslint"
    ],
    "src/css/**/*.css": [
      "stylelint"
    ],
    "**/*.{js,mjs,css,html,json,md}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "body-parser": "^2.2.1",
    "dotenv": "^17.2.3",
    "dotenv-expand": "^12.0.3",
    "express": "^5.2.1"
  }
}
